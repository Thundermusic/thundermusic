{
  "name": "thundermusic",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "cross-env PLATFORM='src/platform/web' vue-cli-service serve",
    "build": "cross-env PLATFORM='src/platform/web' vue-cli-service build",
    "lint": "vue-cli-service lint",
    "cordova-serve-android": "cross-env BASE_URL='' PLATFORM='src/platform/cordova' vue-cli-service cordova-serve-android",
    "cordova-build-android": "cross-env BASE_URL='' PLATFORM='src/platform/cordova' vue-cli-service cordova-build-android",
    "cordova-serve-ios": "cross-env BASE_URL='' PLATFORM='src/platform/cordova' vue-cli-service cordova-serve-ios",
    "cordova-build-ios": "cross-env BASE_URL='' PLATFORM='src/platform/cordova' vue-cli-service cordova-build-ios",
    "cordova-serve-browser": "cross-env BASE_URL='' PLATFORM='src/platform/cordova' vue-cli-service cordova-serve-browser",
    "cordova-build-browser": "cross-env BASE_URL='' PLATFORM='src/platform/cordova' vue-cli-service cordova-build-browser"
  },
  "dependencies": {
    "@babel/polyfill": "^7.0.0-rc.1",
    "@sentry/browser": "^4.1.1",
    "idb": "^2.1.3",
    "material-design-icons-iconfont": "^4.0.2",
    "portal-vue": "^1.4.0",
    "register-service-worker": "^1.0.0",
    "roboto-fontface": "*",
    "vue": "^2.5.17",
    "vue-router": "^3.0.1",
    "vue-virtual-scroller": "^1.0.0-beta.2",
    "vuetify": "^1.2.0",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.1",
    "@vue/cli-plugin-eslint": "^3.0.1",
    "@vue/cli-plugin-pwa": "^3.0.5",
    "@vue/cli-service": "^3.0.1",
    "@vue/eslint-config-prettier": "^3.0.5",
    "babel-plugin-transform-imports": "^1.5.0",
    "cross-env": "^5.2.0",
    "husky": "^1.1.2",
    "lint-staged": "^7.3.0",
    "node-sass": "^4.9.3",
    "sass-loader": "^7.1.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.1",
    "typescript-loader": "^1.1.3",
    "vue-cli-plugin-cordova": "^2.0.8",
    "vue-cli-plugin-vuetify": "^0.2.1",
    "vue-template-compiler": "^2.5.17"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended",
      "@vue/prettier"
    ],
    "rules": {
      "no-console": 0
    },
    "parserOptions": {
      "parser": "babel-eslint"
    },
    "globals": {
      "workbox": true
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 10"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
